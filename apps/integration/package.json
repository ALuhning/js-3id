{
  "name": "3id-integration-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:app": "webpack --config webpack.config.js --mode=development",
    "build:iframe": "CERAMIC_API=http://localhost:7777 webpack --config ../iframe/webpack.config.js --mode=development --output-path ./public/build --output-filename iframe.js",
    "serve:ceramic": "rm -rf ./test/data && ceramic daemon --port 7777 --pinset-directory ./test/data --network inmemory",
    "serve:app": "http-server -c-1 -p 30001 ./public",
    "test:env": "run-p build:** serve:**",
    "test:integration": "jest"
  },
  "dependencies": {
    "@3id/connect": "^0.1.0",
    "@3id/test-utils": "^0.1.0",
    "@babel/runtime": "7.13.9",
    "@ceramicnetwork/3id-did-resolver": "^0.6.10",
    "@ceramicnetwork/http-client": "^0.9.6",
    "dids": "^1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^2.1.1",
    "eslint-plugin-jest-playwright": "^0.2.1",
    "expect-playwright": "^0.3.3",
    "jest-playwright-preset": "^1.4.5",
    "node-sass": "^4.13.1",
    "playwright": "^1.10.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.2",
    "url-loader": "^4.0.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}

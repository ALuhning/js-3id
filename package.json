{
  "name": "3id-connect",
  "version": "1.0.0-alpha.4",
  "description": "Account management for 3ID",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "jest --detectOpenHandles --coverage",
    "build:es5": "rm -rf ./lib && babel src --out-dir lib --extensions .ts",
    "build:types": "rm -rf ./types && tsc --emitDeclarationOnly --skipLibCheck",
    "build:dist": "webpack --config webpack.config.js --mode=development",
    "build:dist:watch": "webpack --config webpack.config.js --mode=development --watch",
    "build:example:dist:watch": "webpack --config ./example/webpack.config.js --mode=development --watch",
    "build:dist:prod": "webpack --config webpack.config.js --mode=production --output-filename index.js",
    "build": "npm run build:dist:prod && npm run build:types && npm run build:es5",
    "prepare": "npm run build:es5 && npm run build:types",
    "server:start": "http-server -c-1 -p 30001 public",
    "server:example:start": "http-server -c-1 -p 30000 example",
    "start": "npm run build:dist:watch & npm run server:start",
    "start:example": "npm run start & npm run build:example:dist:watch & npm run server:example:start"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3box/3id-connect.git"
  },
  "author": "3box <team@3box.io>",
  "license": "(Apache-2.0 OR MIT)",
  "bugs": {
    "url": "https://github.com/3box/3id-connect/issues"
  },
  "homepage": "https://github.com/3box/3id-connect#readme",
  "dependencies": {
    "3id-blockchain-utils": "^1.0.0",
    "@babel/runtime": "^7.12.1",
    "@ceramicnetwork/ceramic-core": "^0.12.0",
    "@ceramicnetwork/ceramic-http-client": "^0.7.1",
    "@ceramicstudio/idx": "^0.3.0",
    "@ceramicstudio/idx-constants": "^0.3.0",
    "@ethersproject/hdnode": "^5.0.3",
    "caip": "^0.9.2",
    "dag-jose": "^0.3.0",
    "dids": "^0.7.0",
    "errors-utils": "^0.1.0",
    "identity-wallet": "^2.0.0-alpha.17",
    "ipfs-http-client": "^47.0.1",
    "multiformats": "^3.0.3",
    "postmsg-rpc": "^2.4.0",
    "rpc-utils": "^0.1.3",
    "store": "^2.0.12",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.7",
    "@portis/web3": "^2.0.0-beta.57",
    "@types/store": "^2.0.2",
    "@types/url-parse": "^1.4.3",
    "@walletconnect/web3-provider": "^1.2.1",
    "authereum": "0.0.4-beta.186",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "css-to-string-loader": "^0.1.3",
    "eslint": "^7.14.0",
    "eslint-config-3box": "^0.2.0",
    "fortmatic": "^2.2.1",
    "http-server": "^0.11.1",
    "ipfs": "^0.50.2",
    "jest": "^26.6.1",
    "node-sass": "^4.13.1",
    "npm": "^6.14.8",
    "prettier": "^2.2.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.2",
    "typescript": "^4.1.2",
    "url-loader": "^4.0.0",
    "web3modal": "^1.9.0",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.1.2"
  }
}

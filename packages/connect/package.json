{
  "name": "@3id/connect",
  "version": "0.1.0",
  "description": "Account management for 3ID",
  "main": "dist/index.js",
  "module": "dist/connect.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "tsdx test",
    "lint": "tsdx lint src test --fix",
    "prepublish": "npm run build",
    "test:build:app": "webpack --config ./test/env/webpack.config.js --mode=development",
    "test:build:iframe": "CERAMIC_API=http://localhost:7777 webpack --config webpack.config.js --mode=development --output-path ./test/env/build --output-filename iframe.js",
    "test:ceramic": "rm -rf ./test/data && ceramic daemon --port 7777 --pinset-directory ./test/data --network inmemory",
    "test:server": "http-server -c-1 -p 30001 ./test/env/",
    "test:app": "run-p test:build:** test:server",
    "test:run:integration": "jest --config integration.jest.config.js",
    "test:run:unit": "jest --projects src/__tests__ --detectOpenHandles",
    "build:dev": "run-p build:prod:es5 build:prod:types build:dev:dist",
    "prepublishOnly": "npm run build",
    "dev:iframe:build": "webpack --config webpack.config.js --mode=development --watch",
    "dev:iframe:server:start": "http-server -c-1 -p 30001 ../../public",
    "start:testnet": "CERAMIC_API=https://ceramic-clay.3boxlabs.com npm run start",
    "dev:demo:server:start": "http-server -c-1 -p 30000 example",
    "dev:demo:build": "webpack --config ./example/webpack.config.js --mode=development --watch",
    "start:demo": "run-p dev:demo:** start",
    "start:demo:testnet": "CERAMIC_API=https://ceramic-clay.3boxlabs.com run-p dev:demo:** start:testnet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceramicstudio/3id-connect.git"
  },
  "author": "3box <team@3box.io>",
  "license": "(Apache-2.0 OR MIT)",
  "bugs": {
    "url": "https://github.com/ceramicstudio/3id-connect/issues"
  },
  "homepage": "https://github.com/ceramicstudio/3id-connect#readme",
  "dependencies": {
    "@3id/iframe-auth-provider": "^0.1.0",
    "@ceramicnetwork/blockchain-utils-linking": "^0.1.0",
    "multicodec": "~2.0.0",
    "postmsg-rpc": "^2.4.0",
    "rpc-utils": "^0.3.4"
  },
  "devDependencies": {
    "@ceramicnetwork/3id-did-resolver": "^0.6.10",
    "@ceramicnetwork/cli": "^0.20.8",
    "@ceramicnetwork/http-client": "^0.9.6",
    "@ceramicnetwork/transport-postmessage": "^0.2.0",
    "@ceramicstudio/idx": "^0.8.0",
    "@ceramicstudio/idx-tools": "^0.8.0",
    "@ethersproject/hdnode": "^5.0.8",
    "@ethersproject/wallet": "^5.0.11",
    "@glif/filecoin-address": "^1.1.0-beta.18",
    "@glif/local-managed-provider": "^1.1.0-beta.18",
    "@polkadot/util": "^5.6.2",
    "@smontero/eosio-local-provider": "^0.0.3",
    "@tendermint/sig": "^0.6.0",
    "@types/create-hash": "^1.2.2",
    "@types/store": "^2.0.2",
    "@types/url-parse": "^1.4.3",
    "@zondax/filecoin-signing-tools": "^0.13.0",
    "bip39": "^3.0.2",
    "caip": "^0.9.2",
    "dids": "^1.1.1",
    "eosjs-ecc": "^4.0.7",
    "rxjs": "^6.6.6",
    "uint8arrays": "^2.1.2"
  },
  "eslintIgnore": [
    "src/__tests__/"
  ]
}
